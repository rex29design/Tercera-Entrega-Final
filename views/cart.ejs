<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body>
    <section class="row p-3 m-2 bg-success">
        <h1 class="col-10 text-white">WELCOME!</h1>
        <div class="col-2">
            <button class=" m-2 btn btn-warning"><a class="text-secondary" href="index.html">Logout</a></button>
        </div>
    </section>
    <div class="container col-12 mt-3">
        <div class="card">
            <div class="card-header">
                <h3>My Cart</h3>
            </div>
            <div class="card-body m-0">
                <div class="table table-striped">
                    <table>
                        <tr>
                            <th>ID</th>
                            <th>Timestamp</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Delete</th>

                        </tr>
                        <% data.forEach(prod=> { %>
                            <tr>
                                <td>
                                    <%= prod.id %>
                                </td>
                                <td>
                                    <%= Date.now()%>
                                </td>
                                <td>
                                    <%= prod.name %>
                                </td>
                                <td>
                                    <%= prod.price %>
                                </td>
                                <td>
                                    <%= prod.description %>
                                </td>
                                <td><img src="<%= prod.image %>"></td>
                                <td>
                                    <form action="delete-from-cart" method="post">
                                        <input type="hidden" name="id" value="<%= prod.id%>">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>

                            </tr>
                            <% }); %>
                    </table>
                    <button class=" m-2 btn btn-warning col-1"><a class="text-secondary" href="/checkout">Checkout</a></button>
                </div>
            </div>
            <div class="card-footer">
                <a href="/products">To Products</a>
            </div>
        </div>
    </div>



</body>

</html>